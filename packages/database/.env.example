# NexusGen Database Configuration
# Copy this file to .env and update the values

# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/nexusgen?schema=public"

# For local development with Docker:
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nexusgen?schema=public"

# For production (use connection pooling):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public&connection_limit=5"

# Direct connection URL for migrations (bypasses connection pooler)
# DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
