{
  "name": "@nexusgen/database",
  "version": "0.1.0",
  "description": "NexusGen AI Platform Database Package - Prisma ORM",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./node_modules/.prisma/client/index.d.ts",
      "default": "./node_modules/.prisma/client/index.js"
    }
  },
  "scripts": {
    "generate": "prisma generate",
    "push": "prisma db push",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "studio": "prisma studio",
    "seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && npm run seed",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "devDependencies": {
    "prisma": "^5.22.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
