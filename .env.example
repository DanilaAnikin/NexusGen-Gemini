# ============================================
# NexusGen AI Platform - Environment Variables
# ============================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env files with actual secrets

# ============================================
# Application
# ============================================
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://nexusgen:nexusgen_secret@localhost:5432/nexusgen?schema=public
DATABASE_DIRECT_URL=postgresql://nexusgen:nexusgen_secret@localhost:5432/nexusgen?schema=public

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Authentication (NextAuth.js)
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ============================================
# OAuth Providers (Optional)
# ============================================
# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================
# AI Provider API Keys
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=

# Google AI (Gemini)
GOOGLE_AI_API_KEY=

# Replicate (for open-source models)
REPLICATE_API_TOKEN=

# ============================================
# Storage (S3-compatible)
# ============================================
S3_BUCKET=nexusgen-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=

# ============================================
# Email (SMTP)
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@nexusgen.ai

# ============================================
# Payments (Stripe)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Analytics & Monitoring
# ============================================
# Sentry
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# PostHog
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# ============================================
# Background Jobs (BullMQ)
# ============================================
QUEUE_CONCURRENCY=5
JOB_RETENTION_DAYS=7

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Feature Flags
# ============================================
FEATURE_AI_AGENTS=true
FEATURE_REALTIME_COLLABORATION=true
FEATURE_ADVANCED_ANALYTICS=false

# ============================================
# Worker Configuration
# ============================================
WORKER_PORT=3001
WORKER_HOST=0.0.0.0

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ============================================
# Security
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT expiration times
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ============================================
# External Services
# ============================================
# Vercel (for deployment)
VERCEL_URL=
VERCEL_ENV=

# GitHub Integration (for code sync)
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=
