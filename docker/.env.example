# NexusGen AI Platform - Docker Environment Variables
# Copy this file to .env and customize values for your environment

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=nexusgen
POSTGRES_PASSWORD=nexusgen_dev
POSTGRES_DB=nexusgen
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Connection string format for applications
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=redis_dev
REDIS_HOST=localhost
REDIS_PORT=6379

# Connection string format for applications
# REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# Docker Compose Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=nexusgen

# =============================================================================
# Production Overrides (uncomment and modify for production)
# =============================================================================
# POSTGRES_PASSWORD=<strong-random-password>
# REDIS_PASSWORD=<strong-random-password>
